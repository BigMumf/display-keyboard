
# Fefore running:
# . $HOME/esp/esp-idf/export.sh

PORT=/dev/cu.usbserial-GT4YU06W
IDF=IDF.py

.PHONY: format clean target build flash config

format:
	clang-format -i main/*.cc

clean:
	rm -rf build sdkconfig.old

config:
	${IDF} menuconfig

target:
	${IDF} set-target esp32s2

build:
	${IDF} build

flash:
	${IDF} -p ${PORT} flash monitor
