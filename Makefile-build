
# Fefore running:
# . $HOME/esp/esp-idf/export.sh

# Download mkspiffs from:
# https://github.com/igrr/mkspiffs/releases

# pip install esptool
PORT=/dev/cu.usbserial-GT4YU06W
BAUD=115200
IDF=idf.py
ESPTOOL=esptool.py
MKSPIFFS=./mkspiffs
FS_BLOCK_SIZE=4096
FS_PAGE_SIZE=256
FS_IMAGE_SIZE=0x100000
PARTITION_OFFSET=0x110000

GIT_SUBMODULES=components/tinyusb \
               components/lv_port_esp32 \
							 components/inih

.PHONY: format clean target build flash config flash-spiffs monitor

format:
	clang-format -i main/*.cc main/*.c main/*.h

clean:
	rm -rf build sdkconfig.old spiffs.bin

config:
	${IDF} menuconfig

target:
	${IDF} set-target esp32s2

build:
	${IDF} build

flash:
	${IDF} -p ${PORT} flash monitor

monitor:
	${IDF} -p ${PORT} monitor

spiffs.bin: Makefile-build fs/*
	${MKSPIFFS} -c fs -b ${FS_BLOCK_SIZE} -p ${FS_PAGE_SIZE} -s ${FS_IMAGE_SIZE} spiffs.bin

flash-spiffs: spiffs.bin
	${ESPTOOL} --chip esp32s2 --port ${PORT} --baud ${BAUD} write_flash -z ${PARTITION_OFFSET} spiffs.bin

.PHONY: submodules-update
submodules-update:
	git submodule update --init ${GIT_SUBMODULES}
	git -C components/lv_port_esp32 submodule update --init components/lvgl/lvgl
